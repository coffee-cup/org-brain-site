{
  "name": "brain-site",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "site": "ts-node src/index.ts && yarn run copy",
    "tsc": "tsc --noemit -p .",
    "copy": "cp -r public/* site",
    "build": "yarn run clean && yarn run site && yarn run copy",
    "clean": "rimraf site",
    "tslint": "tslint --config ./tslint.json '{src,test}/**/*.ts{,x}'",
    "tslint:fix": "tslint --config ./tslint.json --fix '{src,test}/**/*.ts{,x}'"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "mustache": "^3.0.1",
    "org": "https://github.com/coffee-cup/org-js.git"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.121",
    "@types/mkdirp": "^0.5.2",
    "@types/mustache": "^0.8.32",
    "@types/node": "^10.12.21",
    "nodemon": "^1.18.10",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.1"
  }
}
